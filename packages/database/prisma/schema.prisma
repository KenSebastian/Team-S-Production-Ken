// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Authentication {
  user
  staff
  admin
}

model hospitalUser {
  userID       String         @id @default(uuid())
  userEmail    String
  userName     String         @unique
  userPassword String
  authType     Authentication @default(user)
}

model FlowerRequests {
  orderNumber   Int     @id @default(autoincrement())
  patientName   String
  PatientRoom   Int
  customMessage String?
}

model StaffRequests {
  requestID   Int    @id @default(autoincrement())
  priority    String
  location    String
  firstField  String
  secondField String
  status      String
}

model Node {
  nodeID     String     @id
  xcoord     Int
  ycoord     Int
  floor      String
  building   String
  nodeType   String
  longName   String
  shortName  String
  edgesStart NodeEdge[] @relation("NodeStartEdges")
  edgesEnd   NodeEdge[] @relation("NodeEndEdges")
}

model NodeEdge {
  startNode     String
  endNode       String
  startNodeNode Node   @relation(name: "NodeStartEdges", fields: [startNode], references: [nodeID], onDelete: Cascade)
  endNodeNode   Node   @relation(name: "NodeEndEdges", fields: [endNode], references: [nodeID], onDelete: Cascade)

  @@id([startNode, endNode])
}
