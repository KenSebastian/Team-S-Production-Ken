// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example
model HighScore {
  id    Int      @id @default(autoincrement())
  time  DateTime
  score Int
}

model hospitalUser {
  userID         String           @id @default(uuid())
  userEmail      String
  userName       String           @unique
  userPassword   String
  flowerRequests FlowerRequests[]
}

model FlowerRequests {
  orderNumber   Int          @id @default(autoincrement())
  patientName   String
  PatientRoom   Int
  customMessage String?
  userName      String
  user          hospitalUser @relation(fields: [userName], references: [userName])
}

model Node {
  nodeID     String     @id
  xcoord     Int
  ycoord     Int
  floor      String
  building   String
  nodeType   String
  longName   String
  shortName  String
  edgesStart NodeEdge[] @relation("NodeStartEdges")
  edgesEnd   NodeEdge[] @relation("NodeEndEdges")
}

model NodeEdge {
  startNodeID String
  endNodeID   String
  startNode   Node   @relation(name: "NodeStartEdges", fields: [startNodeID], references: [nodeID])
  endNode     Node   @relation(name: "NodeEndEdges", fields: [endNodeID], references: [nodeID])

  @@id([startNodeID, endNodeID])
}
